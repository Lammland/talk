{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "jsx": "react",
    "allowJs": false,
    "lib": ["dom", "es7", "scripthost", "es2015", "esnext.asynciterable"],
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "../../src/core/client/",
    "paths": {
      "coral-account/*": ["./account/*"],
      "coral-admin/*": ["./admin/*"],
      "coral-auth/*": ["./auth/*"],
      "coral-count/*": ["./count/*"],
      "coral-embed/*": ["./embed/*"],
      "coral-stream/*": ["./stream/*"],
      "coral-framework/*": ["./framework/*"],
      "coral-ui/*": ["./ui/*"],
      "coral-test/*": ["./test/*"],
      "coral-common/*": ["../common/*"]
    }
  },
  "include": [
    "../../src/core/client/**/*",
    "../../src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
